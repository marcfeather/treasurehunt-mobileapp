<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.th.monicadzhaleva.treasurehunt.Activities.LoginActivity">

    <!-- Login progress -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Welcome,
Treasure Hunter!"
        android:textColor="#d6be0c"
        android:textSize="30dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#fff"
        >
    <AutoCompleteTextView
        android:id="@+id/usernameRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#444"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="4dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        tools:layout_editor_absoluteX="16dp"></AutoCompleteTextView>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#fff"
        >
    <AutoCompleteTextView
        android:id="@+id/passwordRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#444"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="4dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="141dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#fff"
        >
    <AutoCompleteTextView
        android:id="@+id/firstnameRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#444"
        android:ems="10"
        android:hint="First name"
        android:inputType="textPersonName"
        android:padding="4dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#fff"
        >
    <AutoCompleteTextView
        android:id="@+id/lastnameRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#444"
        android:ems="10"
        android:hint="Last name"
        android:inputType="textPersonName"
        android:padding="4dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />
    </android.support.design.widget.TextInputLayout>


    <RelativeLayout android:id="@+id/avatarViewLayout" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/imageButtonPrev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/ic_media_previous"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_alignTop="@+id/imageButtonNext"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@null"
            />

        <ImageView
            android:id="@+id/chosenAvatar"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="32dp"
            app:srcCompat="@drawable/avatar1"
            android:tag="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/imageButtonNext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/ic_media_next"
            android:layout_alignBottom="@+id/chosenAvatar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="37dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="17dp"
            android:background="@null"
            />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Choose a clan"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp"></TextView>

    <ListView
        android:id="@+id/clanListView"
        android:layout_width="match_parent"
        android:layout_height="805dp"></ListView>

    <Button
        android:id="@+id/email_register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chosenAvatar"
        android:layout_marginTop="16dp"
        android:background="#252525"
        android:padding="15dp"
        android:shadowColor="#5073ff"
        android:text="Register"
        android:textColor="#5073ff"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="15dp" />

</LinearLayout>

</ScrollView>